<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

  <var name="user" class="ph.com.usegutierrez.simplespringwebflow.dto.PersonalInfo" />
  <var name="billing" class="ph.com.usegutierrez.simplespringwebflow.dto.Billing" />


  <!-- start state -->
  <view-state id="signup" view="flows/signup/signup" model="user">
    <transition on="billing" to="billing"/>
  </view-state>

  <view-state id="billing" view="flows/signup/billing" model="billing">
    <transition on="billing" to="billing"/>
  </view-state>

  <view-state id="home" view="externalRedirect:contextRelative:/" />

  <global-transitions>
    <transition on="home" to="home"></transition>
  </global-transitions>

</flow>